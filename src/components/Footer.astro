---
import { Icon } from "astro-icon";
import logo from "../assets/logo-w-text.svg";
---

<footer class="mt-fluid-2xl flex flex-col items-center">
  <div
    class="flex flex-col-reverse items-center gap-fluid-2xl md:flex-row md:p-7"
  >
    <img src={logo.src} alt="logomark" class="w-28 md:w-40" />
    <div class="space-y-3">
      <a href="mailto:amir@maabarot.org.il" class="flex items-center gap-3">
        <Icon
          name="ph:envelope"
          class="w-8 p-1 bg-primary text-white rounded-full"
        />
        <span class="text-fluid-sm">amir@maabarot.org.il</span>
      </a>
      <a href="tel:054-9181500" class="flex items-center gap-3">
        <Icon
          name="ph:whatsapp-logo"
          class="w-8 p-1 bg-primary text-white rounded-full"
        />
        <span class="text-fluid-sm">054-9181500</span>
      </a>
      <a href="tel:054-9181500" class="flex items-center gap-3">
        <Icon
          name="ph:phone-call"
          class="w-8 p-1 bg-primary text-white rounded-full"
        />
        <span class="text-fluid-sm">054-9181500</span>
      </a>
    </div>
  </div>
  <small>
    קשת בטיחות ופרויקטים &copy;
    <span id="copyright"></span>
    | כל הזכויות שמורות
  </small>
</footer>

<script>
  const copyYear = document.getElementById("copyright") as HTMLElement;
  copyYear.textContent = new Date().getFullYear().toString();
</script>
